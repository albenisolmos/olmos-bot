{
  "compilerOptions": {
    "target": "es2022",
    "esModuleInterop": true,
    "allowJs": true,

	// Strictness
	"strict": true,
	"noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,

	// Transpiling with Typescript
	"moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./dist",
	"sourceMap": true,

	"lib": ["es2022"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
	  "esm": true,
	  "experimentalSpecifierResolution": "node"
  }
}
